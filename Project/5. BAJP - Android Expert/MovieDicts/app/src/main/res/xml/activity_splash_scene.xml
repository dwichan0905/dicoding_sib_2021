<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2500"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:scaleX="10" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:scaleY="10" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="65"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="65"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:alpha="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="50"
               android:alpha="1.0" />
           <KeyPosition
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="50"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.5"
               motion:percentY="0.5" />
           <KeyPosition
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="55"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.4"
               motion:percentY="0.55" />
           <KeyPosition
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="60"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.55"
               motion:percentY="0.55" />
           <KeyPosition
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="65"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.5"
               motion:percentY="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image_icon"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/text_app_name"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/text_app_name"
               motion:framePosition="60"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/text_app_name"
               motion:framePosition="70"
               android:alpha="1.0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>